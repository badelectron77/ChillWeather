<resources>

    <!-- DEFAULT: BLUE -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
    </style>

    <style name="AboutTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_about</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <!-- ORANGE -->

    <style name="WeHaveAToolbarAndNoActionBarOrange" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="android:windowBackground">@drawable/bg_gradient_orange</item>
    </style>

    <style name="HourlyThemeOrange" parent="AppTheme">

        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="android:windowBackground">@drawable/bg_gradient_orange</item>
    </style>

    <style name="AboutThemeOrange" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@drawable/bg_about</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
    </style>

    <style name="SettingsThemeOrange" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <!-- MainActivity Theme (with Toolbar => no ActionBar) -->
    <style name="WeHaveAToolbarAndNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for the AppBar  -->
    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Theme for the Popup Menu -->
    <style name="MenuPopupTheme" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
