<resources>

    <!-- DEFAULT: BLUE -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/bg_gradient</item>

    </style>

    <style name="AboutTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_about</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <!-- ORANGE -->

    <style name="AppThemeOrange" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="android:windowBackground">@drawable/bg_gradient_orange</item>
    </style>

    <style name="AboutThemeOrange" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_about</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
    </style>

    <style name="AppThemeOrange.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppThemeOrange.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SettingsThemeOrange" parent="AppThemeOrange">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>
