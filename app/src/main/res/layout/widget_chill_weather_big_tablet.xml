<LinearLayout
    android:id="@+id/bigWidgetLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingEnd="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingStart="4dp"
    android:background="@drawable/bg_widget_100"
    tools:background="#4d4dff">

    <TextView
        android:id="@+id/bigWidgetClockLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-thin"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        tools:text="17:23"
        tools:visibility="visible"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingEnd="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingStart="4dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/bigWidgetTemperatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:includeFontPadding="false"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:visibility="invisible"
            tools:text="25°"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/bigWidgetIconImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/widgetTemperatureLabel"
            android:layout_alignTop="@+id/bigWidgetTemperatureLabel"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/bigWidgetTemperatureLabel"
            android:layout_toRightOf="@+id/bigWidgetTemperatureLabel"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            tools:src="@drawable/cloudy_01"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/bigWidgetLocationIconImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/bigWidgetTemperatureLabel"
            android:layout_alignStart="@+id/bigWidgetTemperatureLabel"
            android:layout_below="@+id/bigWidgetTemperatureLabel"
            android:layout_marginBottom="-8dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-8dp"
            android:src="@drawable/ic_location_on"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/bigWidgetLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bigWidgetLocationIconImageView"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginStart="-4dp"
            android:layout_toEndOf="@+id/bigWidgetLocationIconImageView"
            android:layout_toRightOf="@+id/bigWidgetLocationIconImageView"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="invisible"
            tools:text="Nörtershausen"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/bigWidgetDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bigWidgetLocationIconImageView"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="invisible"
            tools:text="17.09.  8:34"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/bigWidgetLoadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/loading"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="RelativeOverlap"
            tools:visibility="invisible"/>

        <ImageView
            android:id="@+id/bigWidgetRefreshButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:foregroundGravity="right"
            android:src="@drawable/ic_action_refresh"
            android:visibility="visible"/>

    </RelativeLayout>
</LinearLayout>